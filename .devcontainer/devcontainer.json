{
    "name": "terraform xen instances",
    "image": "alpine/terragrunt:1.10.3",
    "postCreateCommand": "echo DONE!",
    "mounts": [
      "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
      "source=${localEnv:HOME}/.gnupg,target=/root/.gnupg,type=bind,consistency=cached"
      //"source=${localEnv:HOME}/.continue,target=/root/.continue,type=bind,consistency=cached"
    ],
    "remoteUser": "root",
    "containerUser": "root",
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.profiles.linux": {
            "bash": {
              "path": "bash",
              "icon": "terminal-bash"
            }
          }
        },
        "extensions": [
          // Terraform
          "hashicorp.terraform",
          "ms-azuretools.vscode-azureterraform",
          // Docs
          "redhat.vscode-yaml",
          "docsmsft.docs-preview",
          // Others
          "eamodio.gitlens",
          "aaron-bond.better-comments",
          "ybaumes.highlight-trailing-white-spaces",
          "Gruntfuggly.todo-tree",
          // GitHub
          "GitHub.copilot",
          "GitHub.copilot-chat",
          "GitHub.vscode-pull-request-github",
          "github.vscode-github-actions",
          "ms-azuretools.vscode-azure-github-copilot",
          "GitHub.remotehub"
          // Open Source Ollama
          //"Continue.continue"
        ]
      }
    }
  }